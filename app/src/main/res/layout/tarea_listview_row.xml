<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">
    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:stretchColumns="1">

        <TextView
            android:id="@+id/lbFecha"
            android:layout_weight="1"
            android:text="28/07/2018"
            android:textSize="24sp"
            android:layout_gravity="right|center_vertical"
            android:layout_span="2"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:stretchColumns="1">

        <TextView
            android:id="@+id/lbDescripcion"
            android:layout_weight="1"
            android:text="No funciona la pc por nada en la vida"
            android:textSize="24sp"
            android:layout_gravity="left|center_vertical" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:stretchColumns="1">

        <TextView
            android:id="@+id/lbUsuario"
            android:layout_weight="1"
            android:text="Hecho por: Juan Perez"
            android:textSize="24sp"
             />
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="TELEFONICO"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/lbEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="PENDIENTE"
            android:textSize="24sp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@color/orange"
            android:textStyle="bold"/>

    </LinearLayout>
</TableLayout>
