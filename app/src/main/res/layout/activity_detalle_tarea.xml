<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.DetalleTareaActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTareaLista"
            android:layout_weight="0.5"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:text="Listo"
            android:background="@color/azul_claro"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17/07/18"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria:"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/txtNombreCategoriaTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre categoria"
        android:textSize="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/txtNombreUsuarioTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre usuario"
        android:textSize="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción:"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/txtDescripcionTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción Tarea"
        android:textSize="24dp"/>
    <Button
        android:id="@+id/btnAgregarNotaTarea"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Agregar nota"
        android:background="@color/azul_claro"
        android:textStyle="bold"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>